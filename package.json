{
  "name": "apka",
  "version": "1.0.0",
  "description": "Apka",
  "author": "AMW <amw.wolan@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "npm run cleanup && npm run dev-build && npm run test",
    "dev-build": "yarn && webpack --config config/webpack.config.js",
    "test": "npm run test-server && npm run test-client",
    "test-client": "karma start config/karma.config.js --single-run",
    "test-server": "mocha-webpack --growl --colors --webpack-config config/webpack.config-test.js \"test/**/*.spec.js\"",
    "cleanup": "rimraf dist/",
    "dev-serve": "node dist/server/apka.js"
  },
  "dependencies": {
    "vue": "^2.2.2",
    "vue-router": "^2.2.0",
    "express": "^4.15.2",
    "mongoose": "^4.9.1"
  },
  "devDependencies": {
    "rimraf": "^2.6.0",
    "webpack": "^2.2.1",
    "copy-webpack-plugin": "^4.0.1",
    "webpack-node-externals": "^1.5.4",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.24.0",
    "karma-babel-preprocessor": "^6.0.1",
    "babel-plugin-transform-runtime": "^6.22.0",
    "eslint": "^3.14.1",
    "eslint-friendly-formatter": "^2.0.7",
    "node-loader": "^0.6.0",
    "json-loader": "^0.5.4",
    "css-loader": "^0.26.1",
    "vue-loader": "^11.1.4",
    "vue-style-loader": "^2.0.0",
    "vue-template-compiler": "^2.2.4",
    "karma": "^1.4.1",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sinon-chai": "^1.2.4",
    "karma-spec-reporter": "0.0.26",
    "karma-webpack": "^2.0.2",
    "mocha": "^3.2.0",
    "mocha-webpack": "^0.7.0",
    "chai": "^3.5.0",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0"
  },
  "engines": {
    "node": ">= 4.0.0",
    "npm": ">= 3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
